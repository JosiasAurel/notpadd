datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String      @id @unique @default(uuid())
  username    String?     @unique
  email       String
  userId      String      @unique
  imageUrl    String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  accounttype AccountType @default(Free)
  projects    Project[]
  Feedback    Feedback[]
}

model Project {
  id          String    @id @unique @default(uuid())
  articles    Article[]
  title       String
  description String?
  User        User?     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([userId])
}

model Feedback {
  id      String @id @unique @default(uuid())
  userId  String
  message String
  User    User?  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Article {
  id           String      @id @unique @default(uuid())
  isPublic     Boolean     @default(false)
  content      String?
  title        String
  userId       String
  type         ArticleType @default(Blogs)
  displayImage String?
  description  String?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  Project      Project?    @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId    String

  @@index([userId])
}

enum AccountType {
  Free
  Basic
  Premium
  Enterprise
}

enum ArticleType {
  Blogs
  Articles
  SimpleNotes
  Other
}
